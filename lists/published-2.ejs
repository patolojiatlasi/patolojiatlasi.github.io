<style>
  .list {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .list li {
    margin: 20px;
    text-align: center;
  }

  .list li a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .list li img {
    width: 200px;
    height: 150px;
    object-fit: cover;
    border: 1px solid #ccc;
    padding: 5px;
  }
</style>

<ul class="list">
  <% for (const item of items) { %>
    <li <%= metadataAttrs(item) %>>
      <a href="<%= item.url %>" target="_blank">
        <img src="<%= item.screenshot %>" alt="image">
      </a>
    </li>
  <% } %>
</ul>


